<h1>Listing trains</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Start station</th>
      <th>End station</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trains.each do |train| %>
      <tr>
        <td><%= train.name %></td>
        <td><%= train.number %></td>
        <td><%= train.start_time %></td>
        <td><%= train.end_time %></td>
        <td><%= train.start_station_id %></td>
        <td><%= train.end_station_id %></td>
        <td><%= link_to 'Show', train %></td>
        <td><%= link_to 'Edit', edit_train_path(train) %></td>
        <td><%= link_to 'Destroy', train, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

